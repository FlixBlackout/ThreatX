{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom", "dom.iterable"],
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "dashboard/src/main/resources/static/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__pycache__"
  ]
}